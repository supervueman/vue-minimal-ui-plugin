{
  "compilerOptions": {
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "types": ["webpack-env", "@types/node", "@types/webpack-env"],
    "paths": {
      "@/*": ["*"]
    },
    "lib": ["es2020", "dom", "dom.iterable", "scripthost"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.vue",
    "../node_modules/@types/dom-inputevent/index.d.ts"
  ],
  "exclude": ["node_modules"]
}
